<h2>User info</h2>

<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p>name <%= @user.name %></p>
  <p>introduction <%= @user.introduction %></p>
</div>

<h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <label>Title</label>
      <%= f.text_field :title %>
    <label>Opinion</label>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>

<h1>Book detail</h1>

<%= image_tag @user.get_profile_image(100,100) %>
<%= link_to user_path(user.id) %>
  <%= @book.user.name %>
<% end %>
<%= @book.title %>
<%= @book.body %>
<%= link_to "Edit", edit_book_path %>
<% if @book.user == current_user %>
  <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？"  %>
<% end %>
