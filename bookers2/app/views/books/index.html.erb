<h2>User info</h2>

<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p>name <%= @user.name %></p>
  <p>introduction <%= @user.introduction %></p>
</div>


<h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <label>Title</label>
      <%= f.text_field :title %>
    <label>Opinion</label>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>

<h2>Books</h2>
<p>Title</p>
<p>Opinion</p>
<% @books.each do |book| %>
<div>
  <%= image_tag 'no_image.jpeg' %>
  <%= link_to book_path(book.id) do %>
    <%= book.title %>
  <% end %>
  <%= book.body %>
</div>
<% end %>
